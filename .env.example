# PostgreSQL configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=default
POSTGRES_PORT=5432

# Performance tuning
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=768MB
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Resource limits
POSTGRES_CPU_LIMIT=1
POSTGRES_MEMORY_LIMIT=1G

# Backup configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *  # Exécution à 2h du matin tous les jours

# pgAdmin configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_this_secure_password
PGADMIN_PORT=5050
PGADMIN_SERVER_MODE=False
PGADMIN_MASTER_PASSWORD_REQUIRED=False
PGADMIN_ENHANCED_COOKIE_PROTECTION=True

# Redis configuration
REDIS_PORT=6379
REDIS_PASSWORD=change_this_secure_password
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru
REDIS_APPENDONLY=yes
REDIS_APPENDFSYNC=everysec
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=512M
